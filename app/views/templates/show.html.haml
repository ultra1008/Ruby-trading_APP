= content_for :page_js do
  :javascript

= render 'partials/navbar'

%div{:class => "uk-section lta-section-header"}
  .uk-container.uk-text-center
    %h1 Template: #{@template.category} - #{@template.column_name}

%div{:class => "uk-section"}
  %div{:class => "uk-container uk-container-small", "uk-height-viewport" => "expand: true"}
    %ul
      - @columns.each do |column|
        %li
          #{column[:name]}:
          = @template.send column[:id]

    = button_to 'Edit', edit_template_path(@template), :method => :get, :class => 'btn btn-primary'
    %br
    = button_to 'Delete',  template_path(@template), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-primary'
    %br
    = link_to 'Back to template list', templates_path

= render 'partials/footer'
